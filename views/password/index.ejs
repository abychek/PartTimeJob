<form class="form-horizontal" method="post" action="/password/edit">
  <div class="form-group">
    <label class="col-lg-2 control-label">Password</label>
    <div class="col-lg-8">
      <input class="form-control" type="password" name="Password" placeholder="Old Password">
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label">Confirm Password</label>
    <div class="col-lg-8">
      <input class="form-control" type="password" name="confirmPassword" placeholder="New Password">
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-2">
      <button class="btn btn-success" type="submit" id="confirm">Confirm</button>
    </div>
  </div>
</form>
